<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_hospital_appointment_tree">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="booking_date"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_hospital_appointment_form">
       <field name="name">hospital.appointment.form</field>
       <field name="model">hospital.appointment</field>
       <field name="arch" type="xml">
           <form>
               <header>
<!--                  buttons -->
                   <button id="action_confirm" name="action_confirm" string="confirm" class="btn-primary"
                           states="draft"
                           type="object"
                           confirm="are you sure that you want to confirm?"/>
                   <button id="action_done" name="action_done" string="Mark As Done" class="btn-primary"
                           states="confirm"
                           confirm="are you sure that you want to set this as done?"
                           type="object"/>
                   <button id="action_draft" name="action_draft" string="Set As a Draft" class="btn-primary"
                           states="cancel"
                           type="object"/>
                   <button id="action_cancel" name="action_cancel" string="Cancel"
                           states="draft,confirm,done"
                           type="object"/>
<!--                  end buttons-->

                   <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
<!--                   options={clickable='1'}/> -->
               </header>
               <sheet>
                   <group>
                       <group>
                           <field name="patient_id"/>
                           <field name="gender"/>
                       </group>
                       <group>
                           <field name="appointment_time"/>
                           <field name="booking_date"/>
                       </group>
                   </group>
               </sheet>
               <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
               </div>
           </form>
       </field>
    </record>
    <record model="ir.ui.view" id="view_hospital_appointment_search">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>
     <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{ }</field>
<!--         <field name="context">{ 'search_default_group_by_gender' : 1 }</field>-->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  Create an appointment!
              </p>
            </field>
    </record>

    <menuitem id="menu_appointment"
        name="Appointment"
        action="action_hospital_appointment"
        parent="menu_appointments_master"
        sequence="10"
        />
    <menuitem id="menu_create_appointment"
        name="Create an Appointment"
        action="create_appointment_wizard_action"
        parent="menu_appointments_master"
        sequence="10"
        />
</odoo>
